<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F4F6F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause Reason"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/btnCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ•"
            android:textSize="24sp"
            android:textColor="#7F8C8D"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnDistraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="External Distraction"
        android:backgroundTint="#ECF0F1"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnScrolling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scrolling / Phone"
        android:backgroundTint="#ECF0F1"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnEat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Eat / Drink"
        android:backgroundTint="#ECF0F1"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnBathroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bathroom"
        android:backgroundTint="#ECF0F1"
        android:textSize="18sp"
        android:textColor="#2C3E50"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:backgroundTint="#ECF0F1"
        android:textSize="18sp"
        android:textColor="#2C3E50"/>

</LinearLayout>