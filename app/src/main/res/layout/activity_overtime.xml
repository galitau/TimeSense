<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F4F6F7"
    tools:context=".TimerActivity">

    <Button
        android:id="@+id/cancelTimer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#E0E0E0"
        android:text="âœ•"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:background="@drawable/btn_cancel_bg"
        android:layout_gravity="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Current Task"
        android:textSize="16sp"
        android:textColor="#E74C3C"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/timerTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Time"
            android:textSize="20sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29:43"
            android:textSize="90sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="10dp"/>

        <ProgressBar
            android:id="@+id/timerProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:progressDrawable="@drawable/custom_progress_bg"
            android:progress="100"
            android:max="100"
            android:progressTint="#E74C3C"
            android:layout_marginBottom="8dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/timeElapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:17 elapsed"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/pauseOvertimeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Pause"
            android:textColor="#E74C3C"
            android:background="@drawable/btn_pause_red_bg"
            app:backgroundTint="@null"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/stopOvertimeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Finish"
            android:textColor="#F4F6F7"
            android:background="@drawable/btn_finish_bg"
            app:backgroundTint="#E74C3C"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

</LinearLayout>